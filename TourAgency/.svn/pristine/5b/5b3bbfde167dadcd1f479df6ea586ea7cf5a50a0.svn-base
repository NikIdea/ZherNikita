 using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;
using System.Web.Mvc.Ajax;
using System.Data.Entity;
using System.Data;
using System.Data.SqlClient;
using KryzhevKersach.Models;
using KryzhevKersach.DAO;

namespace KryzhevKersach.Controllers
{
    public class TransportController : Controller
    {

       TransportDAO transportDAO = new TransportDAO();
       RouteDAO routeDAO = new RouteDAO();

        public ActionResult Index(int? id)
        {
            ViewData["route"] = routeDAO.getAllRoutes();
            return View(transportDAO.getAllTransports());
        }

        public ActionResult Details(int id)
        {
            return View(transportDAO.getTransport(id));
           
        }

        protected bool ViewDataSelectList(int RouteID)
        {
            var route = routeDAO.getAllRoutes();
            ViewData["RouteID"] = new SelectList(route, "IdRoute", "number", RouteID);
            return route.Count() > 0;
        }

        public ActionResult Create()
        {
            if (!ViewDataSelectList(-1))
                return RedirectToAction("Index");
            return View("Create");
        }

        [AcceptVerbs(HttpVerbs.Post)]
        public ActionResult Create(int RouteID, [Bind(Exclude = "IdRoute")] Transport transport)
        {
            try
            {
                if (transportDAO.addTransport(RouteID, transport))
                    return RedirectToAction("Index");
                else
                {
                    ViewDataSelectList(RouteID);
                    return View("Create");
                }
                   
            }
            catch
            {
                return View("Create");
            }
        }


        public ActionResult Edit(int id)
        {
            Transport transport = transportDAO.getTransport(id);
            if (!ViewDataSelectList(Convert.ToInt32(transport.IdTransport)))
                return RedirectToAction("Index");
            return View(transportDAO.getTransport(id));
        }


        [AcceptVerbs(HttpVerbs.Post)]
        public ActionResult Edit(int RouteID, int id, Transport transport)
        {

            if (transportDAO.editTransport(RouteID, transport))
                return RedirectToAction("Index");
            else
            {
                ViewDataSelectList(-1);
                return View("Edit", transportDAO.getTransport(id));
            }
        }

        public ActionResult Delete(int id)
        {
            return View("Delete", transportDAO.getTransport(id));
        }

        [HttpPost, ActionName("Delete")]
        public ActionResult Delete(int id, Transport transport)
        {

            if (transportDAO.deleteTransport(transport))
                return RedirectToAction("Index");
            else return View("Delete", transportDAO.getTransport(id));

        }
    }
}
